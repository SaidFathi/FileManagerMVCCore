@{
    ViewData["Title"] = "Home Page";
}
@section scripts
{
    <script>
        function img( src) {
            $('#myModal2').modal('toggle');
            var div = document.createElement('div');
            var img = document.createElement('img');
            img.src = src;
            div.appendChild(img);
            document.getElementById('images').appendChild(div);
        }
    </script>

}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="col-md-4">
    <div id="images" style="width:10%; height:10%;" class="card"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="input-group">
                <input type="text" id="SelectedItemPath" class="form-control" placeholder="">
                <span class="input-group-btn">
                    <a data-toggle="modal" class="btn btn-primary" href="javascript:void(0);" data-target="#myModal2">Select</a>
                </span>
            </div>
        </div>
    </div>
    <div id="images"></div>
    <div class="modal fade" id="myModal2">
        <div class="modal-dialog " style="max-width: 70%; max-height:100%; height:750px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Open</h4>
                </div>
                <div class="modal-body">
                    <iframe src="~/FileManager/main/_Index" class="embed-responsive-item"
                            frameborder="0" style="overflow:hidden;min-height:750px; height:100%;width:100%"
                            SCROLLING="no" ALIGN="middle" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
